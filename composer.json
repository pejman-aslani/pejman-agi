{
    "name": "pejmanaslani/agi",
    "description": "Modern, type-safe, fully tested PHP AGI client for Asterisk - 2025 Edition",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pejman Tayebi",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Pejman\\Agi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pejman\\Agi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
